extends layout

block content
    link(rel='stylesheet', href="./stylesheets/write.css")
    nav.navbar.navbar-inverse
        div.container-fluid
            div.navbar-header
                a.navbar-brand(href="/") ReSeape
            div.collapse.navbar-collapse
                form.navbar-form.navbar-left(role="search", action="/search", method="get")
                    div.form-group
                        input.form-control(name="search_word",type="text", placeholder="Search")
                        button.btn.btn-default(type="submit") SUBMIT
    div.container-fluid
        form.form-group(action="/write",method="post")
            label Title:
            input.form-control(type="text", name="title", placeholder="Title",required="")
            label Ingredients:
            input.form-control(type="text", name="ingredients", placeholder="split by \",\"",required="")
            label How-to-make:
            textarea.form-control(rows="25", name="how_to", placeholder="split by \".\"",required="")
            button.btn.btn-default(type="submit") SAVE